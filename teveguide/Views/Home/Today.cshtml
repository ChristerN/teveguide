@model IEnumerable<teveguide.Models.db.tv_shows>
@{
    ViewBag.Title = "På TV idag";
}
<h2>@ViewBag.Title</h2>
<h3>@DateTime.Today</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Channel)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Starttime > DateTime.Today && item.Endtime < DateTime.Today.AddDays(1))
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Starttime)
                    </td>
                    <td>
                        @Html.ActionLink("Mer info", "Details", new { id = item.Id })
                    </td>
                </tr>
        }
    }

</table>

